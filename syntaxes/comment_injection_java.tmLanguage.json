{
  "scopeName": "java-comment-spec.injection",
  "injectionSelector": "L:source.java",
  
  "patterns": [
      {
        "begin": "\\/\\*@",
        "end": "\\*\\/",
        "patterns": [
          {
            "name": "constant.character.escape.untitled",
            "match": "\\."
          },
          {
            "include": "source.java.specification"
          }
        ]
      },
      {
        "begin": "\\/\\/@",
        "end": "\\\n",
        "patterns": [
          {
            "name": "constant.character.escape.untitled",
            "match": "\\."
          },
          {
            "include": "source.java.specification"
          }
        ]
      }
  ]
}