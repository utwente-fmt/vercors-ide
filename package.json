{
  "name": "vercorsplugin",
  "displayName": "VerCorsPlugin",
  "description": "Plugin for the vercors tool.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "properties": {
        "vercorsplugin.vercorsPath": {
          "type": "string",
          "description": "Path to the VerCors bin directory"
        },
        "vercorsplugin.optionsMap": {
          "type": "Map<String, String>",
          "default": {},
          "description": "Options map for my extension."
      }
      }
    },
    "languages": [
      {
        "id": "pvl",
        "extensions": [
          ".pvl"
        ]
      },
      {
        "id": "vercors-output",
        "aliases": ["My Output Channel"],
        "extensions": [".myoutput"]
      }
    ],
    "grammars": [
      {
        "language": "pvl",
        "scopeName": "source.pvl",
        "path": "./syntaxes/pvl.tmLanguage.json"
      },
      {
        "path": "./syntaxes/spec_injection_grammar.tmLanguage.json",
        "scopeName": "specification",
        "injectTo": ["source.pvl"] 
      }
    ],
    "commands": [
      {
        "command": "extension.runVercors",
        "title": "Run Vercors",
        "icon": {
					"light": "resources\\run.svg",
					"dark": "resources\\run.svg"
				}
      },
      {
        "command": "extension.setVercorsPath",
        "title": "Set VerCors Path"
      },
      {
        "command": "extension.refreshEntry",
        "title": "Refresh"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
					"id": "vercors-plugin",
					"title": "VerCors Plugin",
          "icon": "resources\\mountain-icon.svg"
        }
      ]
    },
		"views": {
			"vercors-plugin": [
				{
					"id": "vcpView",
					"name": "Plugin View",
					"contextualTitle": "VerCors"
				},
        {
					"type": "webview",
          "id": "vercorsOptionsView",
          "name": "Options"
        }
			]
		},
    "menus": {
			"view/title": [
				{
					"command": "extension.runVercors",
					"when": "view == vcpView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.84.0",
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2",
    "@vscode/test-electron": "^2.3.6"
  }
}
